@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/stylesheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="login-div flex-column-centered">
        <div class="login-comps rounded-3">
            <h2 class="text-center">Create a new Account.</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="d-flex flex-row">
                        <div class="form-floating d-flex flex-column pe-4">
                            <input asp-for="Input.Fname" class="w-100" autocomplete="username" aria-required="true" placeholder="First Name" />
                            <div>
                                <span asp-validation-for="Input.Fname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-floating d-flex flex-column">
                            <input asp-for="Input.Lname" class="w-100" autocomplete="username" aria-required="true" placeholder="Last Name" />
                            <div>
                                <span asp-validation-for="Input.Lname" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-floating d-flex flex-column">
                    <input asp-for="Input.Address" class="w-100" autocomplete="username" aria-required="true" placeholder="Address" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div>
                    <div class="d-flex flex-row">
                        <div class="form-floating d-flex flex-column pe-4">
                            <input asp-for="Input.Dob" class="w-100" type="text" autocomplete="username" aria-required="true" placeholder="Date of Birth" onfocus="this.type='Date'" />
                            <div>
                                <span asp-validation-for="Input.Dob" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-floating d-flex flex-column">
                            <input asp-for="Input.Email" class="w-100" autocomplete="username" aria-required="true" placeholder="Email Address" />
                            <div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="d-flex flex-row">
                        <div class="form-floating d-flex flex-column pe-4">
                            <input asp-for="Input.Password" class="w-100" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-floating d-flex flex-column">
                            <input asp-for="Input.ConfirmPassword" class="w-100" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                            <div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <input id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" value="Registration" />
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
